<div class = "row">
  <div class = "col-xs-12">
    <img src="http://placehold.it/1250x300" class="full-width">
  </div>
</div>

<div class ="row">
  <div class = "col-xs-6 col-xs-offset-2 pull-left">
    <div class = "row">

      <div class = "col-sm-10">
        <div class = "row">
          <h1><%= @city.name %></h1>
        </div>
        <div class = "row">
          <div class = "col-sm-11">
            <% if @city.state || @city.country %>
              <h4><% if @city.state %><%= @city.state %>, <% end %><% if @city.country %><%= @city.country %><% end %></h4>
            <% end %>
          </div>
        </div>
      </div>

      <div class = "col-sm-1 col-sm-offset-1 pull-right center-block">
        <%= button_to "New Post", new_city_post_path(@city), class: "btn btn-info btn-lg top-marg" %>
      </div>

    </div>
  </div>
</div>

<div class = "row">
  <hr />
</div>

<% if @posts %>
<% @posts.each do |post| %>
  <div class = "row">
    <div class = "col-sm-10 col-sm-offset-1">
      <div class = "col-xs-2">
        <img src="http://placehold.it/320x320" class="full-width">
      </div>
      <div class = "col-xs-8 col-xs-offset-1">
        <div class = "row">
          <h5>"<%= post.title %>"</h5>
        </div>
        <div class = "row">
          <%= post.content %>
        </div>
      </div>
    </div>
  </div>
  <div class = "row">
    <hr />
  </div>
<% end %>

<% end %>
