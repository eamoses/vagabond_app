<div class = "row">
  <div class = "col-xs-12">
    <img src="http://placehold.it/1250x300" class="full-width">
  </div>
</div>

<div class ="row">
  <div class = "col-xs-6 col-xs-offset-2 pull-left">
    <div class = "row">

      <div class = "col-sm-10">
        <div class = "row">
          <h1><%= @city.name %></h1>
        </div>
        <div class = "row">
          <div class = "col-sm-11">
            <% if @city.state || @city.country %>
              <h4><em><% if @city.state %><%= @city.state %>, <% end %><% if @city.country %><%= @city.country %><% end %></em></h4>
            <% end %>
          </div>
        </div>
      </div>

      <% if current_user %>
        <div class = "col-md-1 col-md-offset-1 col-xs-4 col-xs-offset-5">
          <%= link_to "New Post", new_post_path(@city), method: "get", class: "btn btn-info btn-lg top-marg" %>
        </div>
      <% end %>

    </div>
  </div>
</div>

<div class = "row">
  <hr />
</div>

<% if @posts %>
<% @posts.order(:created_at).reverse_order.each do |post| %>
  <div class = "row">
    <div class = "col-sm-10 col-sm-offset-1">
      <div class = "col-xs-2">
        <%= image_tag(post.user.avatar, class: 'full-width') %>
        <!-- <img src="h" class="full-width"> -->
      </div>
      <div class = "col-xs-8 col-xs-offset-1">
        <div class = "row">
          <h5>"<%= post.title %>"</h5>
        </div>
        <div class = "row">
          <%=h truncate(post.content, :length => 1000) %>
        </div>
        <div class = "row top-spacer">
          <%= link_to "View this post", city_post_path(@city, post) %>
          <% if post.user == current_user %>
             - <%= link_to "Edit Post", edit_post_path(@city, post) %> - <%= link_to "Delete Post", city_post_path(@city, post), data: {confirm: 'Are you sure?'}, method: "delete" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class = "row">
    <hr />
  </div>
<% end %>

<% end %>
