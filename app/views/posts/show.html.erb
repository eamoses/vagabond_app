
<div class = "row">
  <div class = "col-sm-10 col-sm-offset-1">
    <div class = "col-xs-2">
      <div class = "row">
        <%= image_tag(@post.user.avatar, class: 'full-width') %>
      </div>
      <div class = "row top-spacer">
        <strong><%= link_to (@post.user.first_name + " " + @post.user.last_name), user_path(@post.user)%></strong>
      </div>
      <div class = "row">
        <%= @post.user.current_city %>
      </div>
    </div>
    <div class = "col-xs-8 col-xs-offset-1">
      <div class = "row">
        <h3><%= @post.title %></h3>
      </div>
      <div class = "row">
        <em><%= link_to @post.city.name, city_path(@city) %></em>
      </div>
      <div class = "row top-spacer">
        <%= @post.content %>
      </div>
      <% if @post.user == current_user %>
        <div class = "row top-spacer">
          <%= link_to "Edit Post", edit_post_path(@city, @post) %> - <%= link_to "Delete Post", city_post_path(@city, @post), method: "delete" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
