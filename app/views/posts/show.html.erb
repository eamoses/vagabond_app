
<div class = "row">
  <div class = "col-sm-10 col-sm-offset-1">
    <div class = "col-xs-2">
      <div class = "row">
        <%= link_to image_tag("http://placehold.it/320x320", class: 'full-width'), user_path(@post.user) %>
      </div>
      <div class = "row top-spacer">
        <strong><%= link_to (@post.user.first_name + " " + @post.user.last_name), user_path(@post.user)%></strong>
      </div>
      <div class = "row">
        <%= @post.user.current_city %>
      </div>
    </div>
    <div class = "col-xs-8 col-xs-offset-1">
      <div class = "row">
        <h3><%= @post.title %></h3>
      </div>
      <div class = "row">
        <em><%= link_to @post.city.name, post_path(@city, post) %></em>
      </div>
      <div class = "row top-spacer">
        <%= @post.content %>
      </div>
    </div>
  </div>
</div>
