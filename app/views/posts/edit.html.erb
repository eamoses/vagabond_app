
<div class = "col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
  <div class = "row">
    <h2>Edit your post</h2>
  </div>

  <div class = "row top-spacer">

    <%= form_for [@city, @post] do |f| %>
      <div class = "row">
        <%= f.text_field :title, placeholder: "Post Title", class: "form-control" %>
      </div>
      <div class = "row">
        <%= f.text_area :content, placeholder: "I love this city!", rows: "10", class: "form-control top-spacer" %>
      </div>
      <div class = "row">
        <%= f.submit "Save my Post!", class: "btn btn-success btn-lg top-spacer" %>
      </div>

    <% end %>

  </div>
</div>
